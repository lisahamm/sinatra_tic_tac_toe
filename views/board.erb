<h1>Tic Tac Toe</h1>

<h3><%= @player_mark %></h3>

<div class="board">
  <% @board.each_row do |row| %>
    <div class="row">
      <% row.each do |cell| %>
          <% if (cell.symbol == nil) %>
            <form action="/make_move" method="POST">
              <input type="hidden" name="move" value="<%= cell.index %>" />
              <input type="submit" value="___" />
            </form>
          <% else %>
            <form action="/make_move" method="POST">
              <input type="submit" name="<%= cell.index %>" value=" <%= cell.symbol %> " readonly />
            </form>
          <% end %>
        </form>
      <% end %>
    </div>
  <% end %>
</div>